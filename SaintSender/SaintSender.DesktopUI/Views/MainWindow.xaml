<Window x:Class="SaintSender.DesktopUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaintSender.DesktopUI.Views"
        xmlns:viewmodel="clr-namespace:SaintSender.DesktopUI.ViewModels"
        xmlns:entities="clr-namespace:SaintSender.Entities;assembly=SaintSender"
        xmlns:conv="clr-namespace:SaintSender.DesktopUI.Converters"
        mc:Ignorable="d"
        Title="InWatch" Height="600" Width="1000" FontSize="14">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <conv:EmailAddressListConverter x:Key="converter" />
    </Window.Resources>
    <DockPanel
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Height="Auto" Margin="0">
        <Menu DockPanel.Dock="Top" Background="#FFA6BDD9">
            <MenuItem Name="signIn" Header="Sign Out" Margin="10 0 0 0" Padding="0 5 0 5" FontSize="14" />
            <MenuItem Name="refresh" Header="Refresh" Margin="10 0 0 0" Padding="0 5 0 5" FontSize="14" />
        </Menu>
        <Grid DockPanel.Dock="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <ListBox Name="mailListBox" ItemsSource="{Binding Inbox.Mails}"
                     SelectionMode="Single"
                     Grid.Column="0" ScrollViewer.CanContentScroll="True"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                Padding="0 10 0 10"
                Background="#FFDEEDFF" BorderThickness="0" SelectionChanged="MailListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10,0,10,10">
                            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                <TextBlock Text="Subject" FontWeight="Bold" Width="60"  Margin="0 0 10 0" />
                                <TextBlock Text="{Binding Subject}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Sender" FontWeight="Bold" Width="60" Margin="0 0 10 0" />
                                <TextBlock Text="{Binding Sender}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Date" FontWeight="Bold" Width="60" Margin="0 0 10 0" />
                                <TextBlock Text="{Binding Date}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Read" FontWeight="Bold" Width="60" Margin="0 0 10 0" />
                                <CheckBox IsChecked="False" VerticalAlignment="Center">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <DockPanel Grid.Column="1" Background="#FFF0F0F0">
                <StackPanel Name="selectedMailDataStackPanel" DockPanel.Dock="Top"
                            Visibility="Hidden"
                             Background="#FFFFFFFF">
                    <StackPanel Orientation="Horizontal"
                                Margin="10 10 10 0">
                        <TextBox IsReadOnly="True" Text="Subject" FontWeight="Bold" Width="100" BorderThickness="0" />
                        <TextBox IsReadOnly="True"  Text="{Binding SelectedMail.Subject, Mode=OneWay}" BorderThickness="0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="10 0 10 0">
                        <TextBox IsReadOnly="True" Text="Sender" FontWeight="Bold" Width="100" BorderThickness="0" />
                        <TextBox IsReadOnly="True"  Text="{Binding SelectedMail.Sender, Mode=OneWay}" BorderThickness="0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="10 0 10 0">
                        <TextBox IsReadOnly="True" Text="Receiver" FontWeight="Bold" Width="100" BorderThickness="0" />
                        <TextBox IsReadOnly="True"  Text="{Binding SelectedMail.Recievers, Converter={StaticResource converter}, Mode=OneWay}" BorderThickness="0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="10 0 10 0">
                        <TextBox IsReadOnly="True" Text="Date" FontWeight="Bold" Width="100" BorderThickness="0" />
                        <TextBox IsReadOnly="True"  Text="{Binding SelectedMail.Date, Mode=OneWay}" BorderThickness="0" />
                    </StackPanel>
                </StackPanel>
                <TextBox Name="mailContentTextBox" DockPanel.Dock="Top" IsReadOnly="True"
                         Padding="10"
                         Visibility="Hidden"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Visible"
                     AcceptsReturn="True"
                     Text="{Binding SelectedMail.Content, Mode=OneWay}" BorderThickness="0" />
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>